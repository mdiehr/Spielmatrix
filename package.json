{
  "name": "Spielmatrix",
  "repository": "https://github.com/mdiehr/Spielmatrix.git",
  "version":"0.2.0",
  "devDependencies": {
    "jshint": "latest",
    "browserify": "latest",
    "mocha": "latest",
    "rimraf": "^2.2.8"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "jshint . --exclude-path .jshintignore",
    "test": "mocha test/",
    "browserify": "browserify lib/main.js -o dist/spielmatrix.bundle.js",
    "copy": "copy lib\\pixi\\pixi.min.js dist\\ && copy template\\*.* dist\\ && copy lib\\*.css dist\\",
    "build": "npm run clean && npm run browserify && npm run copy"
  }
}