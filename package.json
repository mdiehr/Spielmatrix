{
  "name": "Spielmatrix",
  "repository": "https://github.com/mdiehr/Spielmatrix.git",
  "version":"0.2.0",
  "devDependencies": {
    "jshint": "latest",
    "browserify": "latest",
    "rimraf": "^2.2.8",
    "archiver": "latest",
    "mkdirp": "latest",
    "sox-stream": "latest",
    "lodash": "latest",
    "minifier": "latest"
  },
  "scripts": {
    "lint": "jshint . --exclude-path .jshintignore",
    "clean": "rimraf dist/* && rimraf release/*",
    "distfolders": "node bin/distfolders.js",
    "browserify": "browserify lib/main.js -o dist/spielmatrix/spielmatrix.bundle.js",
    "minify": "minify dist/spielmatrix/spielmatrix.bundle.js",
    "copy": "copy lib\\pixi\\pixi.min.js dist\\spielmatrix\\ && copy template\\*.* dist\\ && copy lib\\*.css dist\\spielmatrix\\",
    "zip": "node bin/zipDist.js",
    "transcode" : "node bin/transcodeAudio.js",
    "build": "npm run distfolders && npm run browserify && npm run minify && npm run copy && npm run zip",
    "rebuild": "npm run clean && npm run build && npm run transcode"
  }
}